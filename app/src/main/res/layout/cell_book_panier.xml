<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/cover_book"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/desc_cover"/>

    <TextView
        android:id="@+id/title_book"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="Bloblo"
        app:layout_constraintLeft_toRightOf="@id/cover_book"/>

    <TextView
        android:id="@+id/tv_price_suffix"
        android:text="@string/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tv_price_suffix"
        tools:text="50" />

</android.support.constraint.ConstraintLayout>